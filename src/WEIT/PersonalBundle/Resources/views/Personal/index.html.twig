{% extends 'layout.html.twig' %}

{% block body %}
	{{ parent() }}
	{{ include('WEITPersonalBundle:Personal:mensajes/success.html.twig') }}
	<div class="container">
		<dv class="col-md-12">
			<div class="page-header marggin-none">
				<h2 class="padding-none">Personal</h2>
			</div>
			<div class="table-responsive">
				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th>Usuario</th>
							<th>Nombre</th>
							<th>Apellidos</th>
							<th>Rol</th>
						</tr>
					</thead>
					<tbody>
						{% for user in personal %}
							<tr>
								<td>{{ user.username }}</td>
								<td>{{ user.nombre|capitalize }}</td>
								<td>{{ user.apellidos|capitalize }}</td>
								<td>
									{% if user.role == 'ROLE_ADMIN' %}
										{{ 'Adminstrativo' }}
									{% else %}
										{{ 'Comercial' }}
									{% endif %}
								</td>
								<td class="actions">
									<a href="{{ path('weit_personal_editar', {id: user.id}) }}" class="btn btn-sm btn-info">Editar</a>
									<a href="{{ path('weit_personal_ver', {id: user.id}) }}" class="btn btn-sm btn-primary">ver</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</dv>
	</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('bundles/emmuser/js/delete-user.js') }}"></script>
{% endblock %}