{% extends 'layout.html.twig' %}

{% block body %}
	{{ parent() }}
	<div class="container well">
		<div class="col-md-9">
			<h2>{{ personal.Nombre }} {{ personal.Apellidos }}</h2>
			<br>
			<dl>
				<dt>Usuario</dt>
				<dd>
					{{ personal.username }}
					&nbsp;
				</dd>
				<br>

				<dt>Nombre</dt>
				<dd>
					{{ personal.Nombre }}
					&nbsp;
				</dd>
				<br>

				<dt>Apellidos</dt>
				<dd>
					{{ personal.Apellidos }}
					&nbsp;
				</dd>
				<br>

				<dt>Rol</dt>
				<dd>
					{% if personal.role == 'ROLE_ADMIN' %}
						{% trans %}Administrador{% endtrans %}
					{% elseif personal.role == 'ROLE_COMERCIAL' %}
						{% trans %}Comercial{% endtrans %}
					{% endif %}
					&nbsp;
				</dd>
				<br>
			</dl>
		</div>
		<div class="col-md-3">
			<h3>Acciones</h3>
			<p>
				<a href="{{ path('weit_personal_editar', { id: personal.id }) }}" class="btn btn-primary btn-lg btn-block">
					<span class="glyphicon glyphicon-edit"></span>
					Editar
				</a>
			</p>
			<p>
				{{ include('WEITPersonalBundle:Personal:forms/form.html.twig', {form: delete_form, message: '¿Estás seguro?'|trans }) }}
			</p>
		</div>
	</div>

{% endblock %}