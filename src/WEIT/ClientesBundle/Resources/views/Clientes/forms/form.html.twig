{{ form_start(form, {'attr': {'id': id|default('form-delete')}}) }}
	{{ form_widget(form) }}

	{% if with_submit is not defined or with_submit == true %}
		<input type="button" value="Borrar Cliente" class="btn btn-lg btn-block btn-danger" onclick="confirmDelete()" name="">
	{% endif %}

{{ form_end(form) }}

<script type="text/javascript">
	var message = '{{ message }}';

	function confirmDelete()
	{
		var res = confirm(message);
		if(res == true)
		{
			document.form.submit();
		}
		/*bootbox.confirm(message, function(result){
			if(result == true)
			{
			}
		});*/
	}
</script>