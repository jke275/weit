{% extends 'layout.html.twig' %}

{% block body %}
	{{ parent() }}
	{{ include('WEITPersonalBundle:Personal:mensajes/success.html.twig') }}
	<div class="container">
		<dv class="col-md-12">
			<div class="page-header marggin-none">
				<h2 class="padding-none">Espectaculares</h2>
			</div>
			<div class="table-responsive">
				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th>Direcci√≥n</th>
							<th>Dimenciones</th>
							<th>Activo</th>
							<th>Estado</th>
						</tr>
					</thead>
					<tbody>
						{% for espectacular in espectaculares %}
							<tr>
								<td>{{ espectacular.calle|capitalize }} #{{ espectacular.numero }} </td>
								<td>{{ espectacular.largo|capitalize }}x{{ espectacular.ancho|capitalize }} cm </td>
								<td>
									{% if espectacular.isActive  %}
										{{ 'Activo' }}
									{% else %}
										{{ 'No Activo' }}
									{% endif %}
								</td>
								<td>
									{{ espectacular.estado|capitalize }}
								<td class="actions">
									<a href="{{ path('weit_espectaculares_editar', {id: espectacular.id}) }}" class="btn btn-sm btn-info">Editar</a>
									<a href="{{ path('weit_espectaculares_ver', {id: espectacular.id}) }}" class="btn btn-sm btn-primary">ver</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</dv>
	</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('bundles/emmuser/js/delete-user.js') }}"></script>
{% endblock %}